{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**/*.js",
      "src/**/*.jsx",
      "app/**/*.js",
      "app/**/*.jsx",
      "components/**/*.js",
      "components/**/*.jsx",
      "test/**/*.js",
      "!**/*.min.js",
      "!**/dist",
      "!**/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!test/**"],
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": true,
      "attributePosition": "auto"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "off",
        "useSortedKeys": "off"
      }
    }
  }
}
